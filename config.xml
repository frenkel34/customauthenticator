<?xml version='1.0' encoding='utf-8'?>
<widget id="app.frankbenus.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>DGP Authenticator</name>
    <description>
        This is a custom auth app from Okta
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <plugin name="phonegap-plugin-barcodescanner" source="npm" />
    <plugin name="org.apache.cordova.dialogs" source="npm" />
    <plugin name="org.apache.cordova.inappbrowser" source="npm" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-universal-links-plugin" source="npm" />
    <universal-links>
      <host name="booons.com">
        <path url="/some/path/*" />
      </host>
      <host name="atkoflowers.com" />
    </universal-links>
    <platform name="ios">
        <icon height="57" platform="ios" src="logo.png" width="57" />
        <icon height="114" platform="ios" src="logo.png" width="114" />
        <icon height="40" platform="ios" src="logo.png" width="40" />
        <icon height="80" platform="ios" src="logo.png" width="80" />
        <icon height="50" platform="ios" src="logo.png" width="50" />
        <icon height="100" platform="ios" src="logo.png" width="100" />
        <icon height="60" platform="ios" src="logo.png" width="60" />
        <icon height="120" platform="ios" src="logo.png" width="120" />
        <icon height="180" platform="ios" src="logo.png" width="180" />
        <icon height="72" platform="ios" src="logo.png" width="72" />
        <icon height="144" platform="ios" src="logo.png" width="144" />
        <icon height="76" platform="ios" src="logo.png" width="76" />
        <icon height="152" platform="ios" src="www/res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="logo.png" width="29" />
        <icon height="58" platform="ios" src="logo.png" width="58" />
        <icon height="87" platform="ios" src="logo.png" width="87" />
        <splash height="1136" platform="ios" src="www/res/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="www/res/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" platform="ios" src="www/res/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" platform="ios" src="www/res/screen/ios/Default-Landscape-736h.png" width="2208" />
        <splash height="1536" platform="ios" src="www/res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" platform="ios" src="www/res/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" platform="ios" src="www/res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" platform="ios" src="www/res/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="960" platform="ios" src="www/res/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="480" platform="ios" src="www/res/screen/ios/Default~iphone.png" width="320" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
